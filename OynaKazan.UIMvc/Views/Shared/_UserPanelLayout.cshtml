@{
    if (Session["Kadi"] == null || Session["Sifre"] == null)
    {
        Response.Redirect(Url.Action("GirisYap", "Home"));
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap core CSS-->
    <link href="~/Files/UserPanel/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="~/Files/UserPanel/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Page level plugin CSS-->
    <link href="~/Files/UserPanel/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Files/UserPanel/css/sb-admin.css" rel="stylesheet">
    <style>
        .validationLabel {
            color: red;
        }
    </style>
</head>

<body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <a class="navbar-brand" href="@Url.Action("Genel", "UserPanel")">Oyna Kazan</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Dashboard">
                    <a class="nav-link" href="@Url.Action("Genel", "UserPanel")">
                        <i class="fa fa-fw fa-dashboard"></i>
                        <span class="nav-link-text">Gösterge Paneli</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Menu Levels">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#sublm" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-link"></i>
                        <span class="nav-link-text">Oyunlar</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="sublm">
                        <li>
                            <a href="#">- Farklı Kareye Tıkla</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="İşlem Geçmişi">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseExamplePages" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-table"></i>
                        <span class="nav-link-text">İşlemler</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseExamplePages">
                        <li>
                            <a href="@Url.Action("PuanBozdur", "UserPanel")">- Puan Bozdur</a>
                        </li>
                        <li>
                            <a href="@Url.Action("OdemeTalebiOlustur","UserPanel")">- Ödeme Talebi Oluştur</a>
                        </li>
                        <li>
                            <a href="@Url.Action("BakiyeGecmisi","UserPanel")">- Bakiye Geçmişi</a>
                        </li>
                        <li>
                            <a href="@Url.Action("PuanGecmisi","UserPanel")">- Puan Geçmişi</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Banka Hesabı" data-original-title="Banka Hesabı">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseMulti2" data-target="#collapseMulti2" data-parent="#collapseMulti2" aria-expanded="false">
                        <i class="fa fa-fw fa-file"></i>
                        <span class="nav-link-text">Banka Hesabı</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseMulti2" style="">
                        <li>
                            <a href="@Url.Action("YeniBankaHesabi","UserPanel")">- Yeni Banka Hesabı</a>
                        </li>
                        <li>
                            <a href="register.html">- Banka Hesaplarım</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Menu Levels">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseMulti" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-sitemap"></i>
                        <span class="nav-link-text">Destek</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseMulti">
                        <li>
                            <a href="#">- Yeni Destek Talebi</a>
                        </li>
                        <li>
                            <a href="#">- Destek Taleplerim</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Components">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseComponents" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-wrench"></i>
                        <span class="nav-link-text">Ayarlar</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseComponents">
                        <li>
                            <a href="@Url.Action("HesapAyarlari", "UserPanel")">- Hesap Ayarları</a>
                        </li>
                        <li>
                            <a href="@Url.Action("HesapDetayAyari", "UserPanel")">- Hesap Detay Ayarları</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <ul class="navbar-nav sidenav-toggler">
                <li class="nav-item">
                    <a class="nav-link text-center" id="sidenavToggler">
                        <i class="fa fa-fw fa-angle-left"></i>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                @{ if (Session["LastLoginIp"] != null)
                    {
                        if (Session["LastLoginIp"].ToString().Trim().Length > 0)
                        {
                        <li class="nav-item">
                            <a class="nav-link">
                                <i class="fa fa-fw"></i>Son Girilen Ip Adresi: <span style="color:yellow;">@Session["LastLoginIp"].ToString()</span>
                            </a>
                        </li>
                            }
                        }
                    }
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("CikisYap","Operation")">
                        <i class="fa fa-fw fa-sign-out"></i>Çıkış Yap
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    Sizlere daha iyi hizmet verebilmek için projemizi geliştiriyoruz. İlginiz için teşekkürler.
                </li>
            </ol>
            @RenderBody()
        </div>
    </div>

    <script src="~/Files/UserPanel/vendor/jquery/jquery.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Files/UserPanel/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Files/UserPanel/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Page level plugin JavaScript-->
    <script src="~/Files/UserPanel/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Files/UserPanel/vendor/datatables/dataTables.bootstrap4.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Files/UserPanel/js/sb-admin.min.js"></script>
    <!-- Custom scripts for this page-->
    <script src="~/Files/UserPanel/js/sb-admin-datatables.min.js"></script>
